<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/et_back"
        />

    <TextView
        android:id="@+id/posName"
        android:layout_below="@id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Positive:"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/positive"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/posName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_back"
        />

    <TextView
        android:id="@+id/negName"
        android:layout_below="@id/positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negative:"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/negative"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/negName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_back"
        />

    <TextView
        android:id="@+id/hospiCur"
        android:layout_below="@id/negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospitalised Currently:"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/hospitalised"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/hospiCur"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_back"
        />

    <TextView
        android:id="@+id/onVenti"
        android:layout_below="@id/hospitalised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently On Ventilation:"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/onVentilation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/onVenti"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_back"
        />

    <TextView
        android:id="@+id/deathName"
        android:layout_below="@id/onVentilation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Death:"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/death"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/deathName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_back"
        />
    <TextView
        android:id="@+id/Date_checked_name"
        android:layout_below="@id/death"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Checked:"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/date_chk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/Date_checked_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_back"
        />

</RelativeLayout>